{
   "compilerOptions": {
      "lib": ["ES2019"],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "baseUrl": "src",
      "rootDir": "./src",
      
      // typeorm config
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,

      // config typescript
      "strict": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "esModuleInterop": true
   }
}